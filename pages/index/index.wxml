<!-- index.wxml -->
<view class="index">
  <view class="nav">
    <swiper class="swiper" displayMultipleItems="{{nav.displayMultipleItems}}">
      <block wx:for="{{nav.items}}" wx:key="{{index}}">
        <swiper-item class="{{navIndex == item.id ? 'swiperItem actived' : 'swiperItem'}}" data-id="{{item.id}}" bindtap="changeNav">
          {{item.name}}
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="videoWrap">
    <view class="videoBox" wx:for="{{videos}}" wx:key="index" bindtap="goVideoDetail">
      <video class="poster" src="{{item.resource}}" enable-danmu danmu-btn controls />
      <view class="videoName">{{item.videoName}}</view>
    </view>
  </view>
</view>